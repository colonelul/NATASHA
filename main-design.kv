<MainWindow>:
    id: share_data
    name: "main"
    tempContainer: tempContainer
    
    BoxLayout:
        orientation: 'vertical'
        
        BoxLayout:
            orientation: 'horizontal'
            Label:
                id: clock
                text: root.clock_time
                font_size: self.width/10
                pos_hint: {"left": 1}
            
            GridLayout:
                cols: 1
                col_force_default: True
                col_default_width: 30
                row_force_default: True
                row_default_height: 30
                Button:
                    text: "p"
                    on_release: root.manager.current = 'plots'
                Button:
                    text: "s"
                    on_release: root.manager.current = 'settings'
        
        GridLayout:
            cols: 2
        
            GridLayout:
                cols: 1
                BoxLayout:
                    orientation: 'horizontal'
                    
                    BoxLayout:
                        orientation: 'vertical'
                        canvas:
                            Color:
                                rgb: 0, 0, 200/255
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        
                        padding: 20
                        
                        Label:
                            text: 'Bazin apa rece'
                        
                        GridLayout:
                            cols: 1
                            TextInput:
                                id: rece_input
                                input_filter: 'float'
                    
                    BoxLayout:
                        orientation: 'vertical'
                        canvas:
                            Color:
                                rgb: 200/255, 0, 0
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        
                        Label:
                            text: 'Bazin apa calda'
                        
                        GridLayout:
                            cols: 2
                            padding: 20
                            Label:
                                text: '0'
                                id: calda_label
                            TextInput:
                                id: calda_input
                                input_filter: 'float'
        
                BoxLayout:
                    height: 300
                    orientation: 'horizontal'
                    canvas:
                        Color:
                            rgb: 217/255, 176/255, 46/255
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    
                    GridLayout:
                        cols: 10
                        id: tempContainer
            BoxLayout:
                orientation: 'vertical'
                
                Button:
                    id: heaters
                    text: "Start incalzire"
                
                BoxLayout:
                    orientation: 'horizontal'
                    
                    TextInput:
                        id: amp
                        input_filter: 'float'

                    Label:
                        text: '0'
                
                BoxLayout:
                    orientation: 'horizontal'
                    
                    Button:
                        id: motor_plus
                        text: "+"
                    Button:
                        id: motor_minus
                        text: "-"
                Button:
                    id: motor
                    text: "Start"

<Settings>:
    name: "settings"
    Button:
        text: "Back"
        size_hint_y: 0.1
        on_release: root.dada()
    
<Plots>:
    name: "plots"
    Button:
        text: "Back"
        size_hint_y: 0.1
        on_release: root.manager.current = "mode"

<KeyboardScreen>:
    name: "keyboard"
    displayLabel: displayLabel
    kbContainer: kbContainer
    intr_temp: intr_temp
    
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: intr_temp
            size_hint_y: 0.15
            text: "Introduceti o temperatura"
        BoxLayout:
            id: kbContainer
            size_hint_y: 0.2
            orientation: "horizontal"
            padding: 10

        BoxLayout:
            id: kbContainer
            size_hint_y: 0.2
            orientation: "horizontal"
            padding: 10
        Label:
            id: displayLabel
            size_hint_y: 0.15
            markup: True
            text: ""
            halign: "center"
        Widget:
            # Just a space taker to allow for the popup keyboard
            size_hint_y: 0.5