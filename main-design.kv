<MainWindow>:
    id: share_data
    name: "main"
    tempContainer: tempContainer
    canvas:
        Color:
            rgb: 54/255, 55/255, 64/255
        Rectangle:
            size: self.size
            
    GridLayout:
        id: screen
        rows: 3
        padding: 10
        
        BoxLayout:
            id: screen_top
            orientation: 'horizontal'
            height: screen.height/6
            size_hint: 1, None

            BoxLayout:
                canvas:
                    Color:
                        rgb: 2/255, 8/255, 18/255
                    RoundedRectangle:
                        size: screen_top.width/2 - 100, screen_top.height - 80
                        pos: screen_top.x + 50, screen_top.y + 40
                        radius: [(20, 20), (20, 20), (20, 20), (20, 20)]
                BoxLayout
                    canvas.before:
                        Color:
                            rgb: 25/255, 35/255, 51/255
                        RoundedRectangle:
                            size: screen_top.width/2 - 110, screen_top.height - 90
                            pos: screen_top.x + 55, screen_top.y + 45
                            radius: [(20, 20), (20, 20), (20, 20), (20, 20)]
                
                    Label:
                        id: clock
                        text: ""
                        font_size: '40sp'
                        font_name: 'Z:/NATASHA/NATASHA_RASPBERRY/Font-style/font_1.ttf'
        
            BoxLayout:
                id: panel_right
                orientation: 'vertical'
                Button:
                    id: plots
                    on_release: root.manager.current = 'plots'
                    size: 50, 50
                    size_hint: None, None
                    pos_hint: {'x': 0.92}
                    Image:
                        source: 'Z:/NATASHA/NATASHA_RASPBERRY/Images/plots.png'
                        size: 42, 42
                        center_x: plots.center_x
                        center_y: plots.center_y
                
                Button:
                    id: settings
                    on_release: root.manager.current = 'settings'
                    size: 50, 50
                    size_hint: None, None
                    pos_hint: {'x': 0.92}
                    Image:
                        source: 'Z:/NATASHA/NATASHA_RASPBERRY/Images/settings.png'
                        size: 42, 42
                        center_x: settings.center_x
                        center_y: settings.center_y

        GridLayout:
            id: middle
            cols: 2
            BoxLayout:
                height: screen.height/5
                width: screen.width/2
                size_hint: None, None
            
            Image:
                id: camera
                size: middle.width/2, middle.height/2
        
        GridLayout:
            cols: 2
            GridLayout:
                id:screen_bottom
                rows: 3
                padding: (3,3,3,0)
                canvas:
                    Color:
                        rgb: 26/255.0, 32/255.0, 38/255.0
                    Rectangle:
                        size: screen_bottom.size
                        pos: screen_bottom.pos
                GridLayout:
                    cols:2
                    height:screen_bottom.height/5
                    size_hint: 1, None
                    
                    BoxLayout:
                        id: bazin_rece
                        padding: 5
                        canvas:
                            Color:
                                rgb: 0, 0, 50/255
                            Rectangle:
                                size: bazin_rece.size
                                pos: bazin_rece.pos
                        
                        GridLayout:
                            cols: 1
                            padding: 10
                            canvas:
                                Color:
                                    rgb: 0, 0, 130/255
                                Rectangle:
                                    size: bazin_rece.width/1.03, bazin_rece.height/1.1
                                    pos: bazin_rece.x + bazin_rece.width/70, bazin_rece.y + bazin_rece.width/90        
                            Label:
                                text: '[b]Bazin apa rece[/b]'
                                font_size: '20sp'
                                size_hint: (1, 0.1)
                                markup: True
                             
                            Label:
                                id: bazin_rece-lab
                                text: 'Temperatura: 0*C'
                                valign: 'middle'
                    
                    BoxLayout:
                        id: bazin_cald
                        padding: 5
                        canvas:
                            Color:
                                rgb: 50/255, 0, 0
                            Rectangle:
                                size: bazin_cald.size
                                pos: bazin_cald.pos
                        
                        GridLayout:
                            cols: 1
                            padding: 10
                            canvas:
                                Color:
                                    rgb: 130/255, 0, 0
                                Rectangle:
                                    size: bazin_cald.width/1.03, bazin_cald.height/1.1
                                    pos: bazin_cald.x + bazin_cald.width/70, bazin_cald.y + bazin_cald.width/90
                            Label:
                                text: '[b]Bazin apa calda[/b]'
                                font_size: '20sp'
                                size_hint: (1, 0.1)
                                markup: True
                            
                            GridLayout:
                                cols: 2
                                Label:
                                    id: bazinCald_lab  
                                    text: 'Temperatura: 0*C'
                                    valign: 'middle'
                                TextInput:
                                    id: bazinCald_text
                                    height: 30
                                    size_hint: .8, None 
                                    input_filter: 'float'
                GridLayout:
                    cols: 10
                    id: tempContainer
                    canvas:
                        Color:
                            rgb: 148/255, 149/255, 156/255
                        Rectangle:
                            size: tempContainer.size
                            pos: tempContainer.pos
                BoxLayout:
                    id: box_start_hit
                    height:screen_bottom.height/6
                    size_hint: 1, None
                    padding: 10
                    Button:
                        id: heaters
                        text: "START Incalzire"
                        background_color: 0, 210/255, 0
                        border: (1,1,1,1)
            GridLayout:
                id:right_screen_bottom
                rows: 3
                padding: (3,3,3,0)
                canvas:
                    Color:
                        rgb: 26/255.0, 32/255.0, 38/255.0
                    Rectangle:
                        size: right_screen_bottom.size
                        pos: right_screen_bottom.pos
                GridLayout:
                    cols:2
                    height:screen_bottom.height/5
                    size_hint: 1, None
                    
                    Label:
                        id: dFilament_laser
                        text: "[b]Dimensiune filament(Laser):[/b]"
                        font_size: '20sp'
                        size_hint: (1, 0.1)
                        markup: True
                        
                    Label:
                        id: filament_camera
                        text: "[b]Dimensiune filament(Camera):[/b]"
                        font_size: '20sp'
                        size_hint: (1, 0.1)
                        markup: True
                
                BoxLayout:
                    id: button_right
                    height: right_screen_bottom.height/1.6
                    size_hint:1, None
                
                    GridLayout:
                        cols: 3
                        height: button_right.height/4
                        size_hint:1, None
                        
                        Button:
                            id: motor_plus
                            text: "+1Hz"
                            size_hint: .4, .4
                        Button:
                            id: motor_minus
                            text: "-1Hz"
                            size_hint: .4, .4
                        
                        GridLayout:
                            cols: 2
                            BoxLayout:
                                orientation: 'vertical'
                                TextInput:
                                    id: hz_text
                                    input_filter: 'float'
                                    height: 30
                                    size_hint: 1, None
                                
                                Label:
                                    id:amp
                                    text: "[b]Amperajul este:[/b]"
                                    font_size: '20sp'
                                    size_hint: (1, 0.1)
                                    markup: True
                            BoxLayout:
                                orientation: 'vertical'
                                Label:
                                    id: hz_label
                                    text: '0Hz'
                                    font_size: '20sp'
                                    markup: True
                                
                                Label:
                                    id: amp_label
                                    text: '0A'
                                    font_size: '20sp'
                                    markup: True
                            
                BoxLayout:
                    height:screen_bottom.height/6
                    size_hint: 1, None
                    padding: 10
                    Button:
                        id: motor
                        text: "START Motor"
                        background_color: 0, 210/255, 0
                        border: (1,1,1,1)
<Settings>:
    id: screen_settings
    name: "settings"
    canvas:
        Color:
            rgb: 0x26/255.0, 0x32/255.0, 0x38/255.0
        Rectangle:
            size: self.size
    GridLayout:
        rows:1
        
        BoxLayout:
            id: control_motor
            orientation: 'vertical'
            padding: 20
            height: screen_settings.height/3
            width: screen_settings.width/4
            size_hint: None, None
            
            GridLayout:
                rows:4
                Label:
                    text: "[b]Controlul motorului pentru tragerea filamentului[/b]"
                    markup: True
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: "RPM:"
                        markup: True
                    
                    TextInput:
                        id: hault_text
                        input_filter: 'float'
                        size: 100, 40
                        size_hint: None, None 
                
                BoxLayout:
                    orientation: 'horizontal'
                    height: control_motor.height/7
                    size_hint: 1, None
                    Button:
                        id: hault_motor
                        text: "Stop"
                        on_release: root.hault_stop()
                        
                    Button:
                        id: hault_motor
                        text: "START"
                        on_release: root.hault_motor()
                    
                Button:
                    text: "Back"
                    on_release: root.manager.current = 'mode'
        
<Plots>:
    name: "plots"
    Button:
        text: "Back"
        size_hint_y: 0.1
        on_release: root.manager.current = "mode"

<KeyboardScreen>:
    name: "keyboard"
    displayLabel: displayLabel
    kbContainer: kbContainer
    intr_temp: intr_temp
    
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgb: 0x26/255.0, 0x32/255.0, 0x38/255.0
            Rectangle:
                size: self.size
        
        Label:
            id: intr_temp
            size_hint_y: 0.15
            text: ""
            font_size: "24sp"
        BoxLayout:
            id: kbContainer
            size_hint_y: 0.2
            orientation: "horizontal"
            padding: 10

        BoxLayout:
            id: kbContainer
            size_hint_y: 0.2
            orientation: "horizontal"
            padding: 10
        Label:
            id: displayLabel
            size_hint_y: 0.15
            markup: True
            text: ""
            halign: "center"
            font_size: '23sp'
        Widget:
            # Just a space taker to allow for the popup keyboard
            size_hint_y: 0.5