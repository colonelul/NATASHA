
<MainWindow>:
    name: "main"
    
    tempContainer: tempContainer
    
    BoxLayout:
        orientation: 'vertical'
        
        BoxLayout:
            orientation: 'horizontal'
            Label:
                id: time
                text: '[b]00[/b]:00:00'
                pos_hint: {'top': 1}
            
            GridLayout:
                cols: 1
                col_force_default: True
                col_default_width: 30
                row_force_default: True
                row_default_height: 30
                Button:
                    text: "p"
                Button:
                    text: "s"
        
        BoxLayout:
            orientation: 'horizontal'
        
            BoxLayout:
                orientation: 'vertical'
                
                BoxLayout:
                    
                    
                
                BoxLayout:
                    orientation: 'horizontal'
                    
                    Label:
                        text: 'RECE'
                    Label:
                        text: 'CALD'
        
                BoxLayout:
                    height: 300
                    orientation: 'horizontal'
                
                    GridLayout:
                        cols: 10
                        id: tempContainer
            BoxLayout:
                orientation: 'vertical'
                
                Button:
                    text: "Start incalzire"
                
                BoxLayout:
                    orientation: 'horizontal'
                    
                    TextInput:
                        id: amp
                        font_size: (root.width**2 + root.height**3) / 14**2

                    Label:
                        text: '0'
                
                BoxLayout:
                    orientation: 'horizontal'
                    
                    Button:
                        text: "+"
                    Button:
                        text: "-"
                Button:
                    text: "Start/stop Motor"

<Settings>:
    name: "settings"
    
<Plots>:
    name: "plots"