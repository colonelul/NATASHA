
<MainWindow>:
    name: "main"
    
    tempContainer: tempContainer
    
    BoxLayout:
        orientation: 'vertical'
        
        BoxLayout:
            orientation: 'horizontal'
            Label:
                id: time
                text: '[b]00[/b]:00:00'
                pos_hint: {'top': 1}
            
            GridLayout:
                cols: 1
                col_force_default: True
                col_default_width: 30
                row_force_default: True
                row_default_height: 30
                Button:
                    text: "p"
                    on_release: root.manager.current = 'plots'
                Button:
                    text: "s"
                    on_release: root.manager.current = 'settings'
        
        GridLayout:
            cols: 2
        
            GridLayout:
                cols: 1
                BoxLayout:
                    orientation: 'horizontal'
                    
                    BoxLayout:
                        orientation: 'vertical'
                        Label:
                            text: 'Bazin apa rece'
                        
                        GridLayout:
                            cols: 2
                            Label:
                                text: '0'
                                id: T_rece_l
                            TextInput:
                                id: T_rece_t
                    
                    BoxLayout:
                        orientation: 'vertical'
                        Label:
                            text: 'Bazin apa calda'
                        
                        GridLayout:
                            cols: 2
                            Label:
                                text: '0'
                                id: T_calda_l
                            TextInput:
                                id: T_calda_t   
        
                BoxLayout:
                    height: 300
                    orientation: 'horizontal'
                
                    GridLayout:
                        cols: 10
                        id: tempContainer
            BoxLayout:
                orientation: 'vertical'
                
                Button:
                    text: "Start incalzire"
                
                BoxLayout:
                    orientation: 'horizontal'
                    
                    TextInput:
                        id: amp
                        font_size: (root.width**2 + root.height**3) / 14**2

                    Label:
                        text: '0'
                
                BoxLayout:
                    orientation: 'horizontal'
                    
                    Button:
                        text: "+"
                    Button:
                        text: "-"
                Button:
                    text: "Start/stop Motor"

<Settings>:
    name: "settings"
    Button:
        text: "Back"
        size_hint_y: 0.1
        on_release: root.dada()
    
<Plots>:
    name: "plots"
    Button:
        text: "Back"
        size_hint_y: 0.1
        on_release: root.manager.current = "mode"
